{
  "variables": {
    "aws_access_key_id": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
    "aws_default_region": "{{env `AWS_DEFAULT_REGION`}}",
    "sc_env": "{{env `SC_ENV`}}"
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key_id`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-2",
    "source_ami": "ami-1690b173",
    "instance_type": "m4.2xlarge",
    "ssh_username": "centos",
    "ssh_keypair_name": "ctindel-hh-20180510",
    "ssh_private_key_file": "/home/centos/.ssh/hh-20180510.id_rsa",
    "ami_name": "ctindel-squirrel-{{user `sc_env`}}",
    "ami_description": "Chad ctindel Tindel Squirrelcart Docker Host {{user `sc_env`}}",
    "force_deregister": "true",
    "subnet_id": "subnet-19527870",
    "security_group_ids" : [ "sg-e4bc8f8c" ],
    "associate_public_ip_address" : true
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "/home/centos/.ssh/hh-20180510.id_rsa.pub",
      "destination": "/var/tmp/centos.pub"
    },
    {
      "type": "file",
      "source": "files/update_route53_mapping.sh",
      "destination": "/var/tmp/update_route53_mapping.sh"
    },
    {
      "type": "shell",
      "execute_command": "echo '{{user `password`}}' | {{.Vars}} sudo -E -S bash '{{.Path}}'",
      "environment_vars" : [
          "AWS_ACCESS_KEY_ID={{user `aws_access_key_id`}}",
          "AWS_SECRET_ACCESS_KEY={{user `aws_secret_key`}}",
          "AWS_DEFAULT_REGION={{user `aws_default_region`}}"
      ],
      "scripts": [
        "scripts/common/setup_utils.sh",
        "scripts/atomic/install_utils.sh",
        "scripts/atomic/install_aws.sh",
        "scripts/atomic/setup_docker.sh",
        "scripts/common/fix_centos_user_ownership.sh"
      ]
    }
  ]
}
